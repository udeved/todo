_url="https://raw.githubusercontent.com/gentoo/gentoo/master"

pkgname=ddclient-openrc
pkgver=20180312
pkgrel=1
pkgdesc="OpenRC ddclient init script"
arch=('any')
url="https://github.com/artix-linux/packages-galaxy"
license=('GPL2')
groups=('openrc-galaxy')
depends=('openrc' 'ddclient')
conflicts=('systemd-sysvcompat')
source=("ddclient.initd::${_url}/net-dns/ddclient/files/ddclient.initd-r4")
sha256sums=('8e63f6d572bb2addd62f38f12e14523d68d2536cd15e0a1057b5da47bb204b94')

# pkgver() {
# 	date +%Y%m%d
# }

_inst_initd(){
    install -Dm755 ${srcdir}/$1.initd ${pkgdir}/etc/init.d/$1

    sed -e 's|#!/sbin/openrc-run|#!/usr/bin/openrc-run|g' \
        -e 's|/var/run|/run|g' \
        -e 's|/usr/sbin|/usr/bin|g' \
        -i ${pkgdir}/etc/init.d/$1
}

_inst_confd(){
    install -Dm755 ${srcdir}/$1.confd ${pkgdir}/etc/conf.d/$1
}

package() {
    _inst_initd 'ddclient'
}
