_url="https://raw.githubusercontent.com/gentoo/gentoo/master"

pkgname=privoxy-openrc
pkgver=20180312
pkgrel=1
pkgdesc="OpenRC privoxy init script"
arch=('any')
url="https://github.com/artix-linux/packages-galaxy"
license=('GPL2')
groups=('openrc-galaxy')
depends=('openrc' 'privoxy')
conflicts=('systemd-sysvcompat')
source=("privoxy.initd::${_url}/net-proxy/privoxy/files/privoxy.initd-3")
sha256sums=('7a2e3996dd9dd02307b11ffb2dca8915490283820a6b6c124d808a38badcc505')

# pkgver() {
# 	date +%Y%m%d
# }

_inst_initd(){
    install -Dm755 ${srcdir}/$1.initd ${pkgdir}/etc/init.d/$1

    sed -e 's|#!/sbin/openrc-run|#!/usr/bin/openrc-run|g' \
        -e 's|/var/run|/run|g' \
        -e 's|/usr/sbin|/usr/bin|g' \
        -i ${pkgdir}/etc/init.d/$1
}

_inst_confd(){
    install -Dm755 ${srcdir}/$1.confd ${pkgdir}/etc/conf.d/$1
}

package() {
    _inst_initd 'privoxy'
}
